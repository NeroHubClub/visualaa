-- ============================================
-- TRADE HISTORY TAB
-- ============================================
local HistoryTab = MainSection:Tab({
    Title = CreateGradientText("Trade History", Colors.Gold, Colors.Green),
    Icon = "archive",
})

HistoryTab:Section({
    Title = "Trade Statistics",
    TextSize = 18,
    FontWeight = Enum.FontWeight.SemiBold,
})

local statsLabel = HistoryTab:Label({
    Title = "Loading statistics...",
    Icon = "bar-chart-2",
})

local function UpdateStatistics()
    local topFruits = {}
    for fruit, count in pairs(TradeHistory.FruitCount) do
        table.insert(topFruits, {Name = fruit, Count = count})
    end
    table.sort(topFruits, function(a, b) return a.Count > b.Count end)
    
    local topFruitsText = ""
    for i = 1, math.min(3, #topFruits) do
        topFruitsText = topFruitsText .. topFruits[i].Name .. " x" .. topFruits[i].Count
        if i < math.min(3, #topFruits) then topFruitsText = topFruitsText .. ", " end
    end
    
    statsLabel:Set("Total Trades: " .. TradeHistory.TotalTrades .. "\nTotal Fruits: " .. TradeHistory.TotalFruitsTraded .. "\nTop Fruits: " .. (topFruitsText ~= "" and topFruitsText or "None"))
end

UpdateStatistics()

HistoryTab:Space({Columns = 2})

HistoryTab:Section({
    Title = "Recent Successful Trades",
    TextSize = 18,
    FontWeight = Enum.FontWeight.SemiBold,
})

local tradesContainer = HistoryTab:Container()

local function RefreshTradeHistory()
    tradesContainer:Clear()
    
    if #TradeHistory.SuccessfulTrades == 0 then
        tradesContainer:Label({
            Title = "No trades recorded yet",
            Icon = "inbox",
            TextTransparency = 0.5,
        })
        return
    end
    
    for i = 1, math.min(10, #TradeHistory.SuccessfulTrades) do
        local trade = TradeHistory.SuccessfulTrades[i]
        
        local itemsText = ""
        for _, item in ipairs(trade.Items) do
            itemsText = itemsText .. "‚Ä¢ " .. item .. "\n"
        end
        
        tradesContainer:Section({
            Title = "Trade #" .. trade.ID .. " - " .. trade.DateStr,
            TextSize = 16,
            FontWeight = Enum.FontWeight.SemiBold,
        })
        
        tradesContainer:Label({
            Title = "Partner: " .. trade.Partner,
            Icon = "user",
        })
        
        tradesContainer:Label({
            Title = "Sea: " .. trade.Sea,
            Icon = "map",
        })
        
        tradesContainer:Label({
            Title = "Items Received:",
            Icon = "package",
        })
        
        tradesContainer:Label({
            Title = itemsText,
            Icon = "chevron-right",
            TextSize = 14,
            TextTransparency = 0.2,
        })
        
        tradesContainer:Label({
            Title = "Total Fruits: " .. trade.TotalFruits,
            Icon = "hash",
        })
        
        if i < math.min(10, #TradeHistory.SuccessfulTrades) then
            tradesContainer:Divider()
        end
    end
end

RefreshTradeHistory()

HistoryTab:Space()

HistoryTab:Button({
