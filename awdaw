-- ============================================
-- TRADE MONITORING SYSTEM
-- ============================================
task.spawn(function()
    while true do
        local success, inTrade, partner = pcall(checkTrade)
        if not success then
            task.wait(1)
            continue
        end
        
        if inTrade and not wasInTrade then
            currentTradePartner = partner
            wasInTrade = true
            
            task.wait(1)
            initialInventory = getInventory()
            
            WindUI:Notify({
                Title = CreateGradientText("üîî TRADE DETECTED", Colors.Green, Colors.Blue),
                Content = "Now trading with: " .. partner,
                Icon = "users",
                Duration = 4,
            })
            
        elseif not inTrade and wasInTrade then
            wasInTrade = false
            
            if currentTradePartner ~= "" then
                task.wait(1.5)
                
                local currentInventory = getInventory()
                local _, initialItemsMap = formatTradeItems(initialInventory)
                local _, currentItemsMap = formatTradeItems(currentInventory)
                
                local receivedItems = {}
                
                for fruitName, currentCount in pairs(currentItemsMap) do
                    local initialCount = initialItemsMap[fruitName] or 0
                    if currentCount > initialCount then
                        table.insert(receivedItems, fruitName .. " x" .. (currentCount - initialCount))
                    end
                end
                
                if #receivedItems > 0 then
                    local sea = getSeaName()
                    AddTradeToHistory(currentTradePartner, receivedItems, sea)
                    RefreshTradeHistory()
                    UpdateStatistics()
                    
                    WindUI:Notify({
                        Title = CreateGradientText("‚úÖ ITEMS RECEIVED!", Colors.Gold, Colors.Green),
                        Content = "You received " .. #receivedItems .. " items from " .. currentTradePartner,
                        Icon = "package",
                        Duration = 6,
                    })
                    
                    local itemsText = ""
                    for i = 1, math.min(3, #receivedItems) do
                        itemsText = itemsText .. receivedItems[i]
                        if i < math.min(3, #receivedItems) then itemsText = itemsText .. ", " end
                    end
                    
                    if #receivedItems > 3 then
                        itemsText = itemsText .. " and " .. (#receivedItems - 3) .. " more"
                    end
                    
                    WindUI:Notify({
                        Title = "Items Received",
                        Content = itemsText,
                        Icon = "gift",
                        Duration = 4,
                    })
                    
                else
                    local gaveItems = {}
                    for fruitName, initialCount in pairs(initialItemsMap) do
                        local currentCount = currentItemsMap[fruitName] or 0
                        if currentCount < initialCount then
                            table.insert(gaveItems, fruitName .. " x" .. (initialCount - currentCount))
                        end
                    end
                    
                    if #gaveItems > 0 then
                        WindUI:Notify({
                            Title = CreateGradientText("üì§ ITEMS GIVEN", Colors.Blue, Colors.Purple),
                            Content = "You gave " .. #gaveItems .. " items to " .. currentTradePartner,
                            Icon = "arrow-up",
                            Duration = 4,
                        })
                    else
                        WindUI:Notify({
                            Title = CreateGradientText("‚ùå TRADE CANCELLED", Colors.Blood, Colors.Orange),
                            Content = "Trade with " .. currentTradePartner .. " was cancelled",
                            Icon = "x-circle",
                            Duration = 3,
                        })
                    end
                end
            end
            
            currentTradePartner = ""
        end
        
        task.wait(1)
    end
end)

