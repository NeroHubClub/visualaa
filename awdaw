local function getInventory()
    local success, result = pcall(function()
        return CommF:InvokeServer("getInventory")
    end)
    return success and result or {}
end

-- ============================================
-- GET SEA NAME
-- ============================================
local function getSeaName()
    if game.PlaceId == 4442272183 then
        return "Sea 2"
    else
        return "Sea 3"
    end
end

-- ============================================
-- FORMAT ITEMS
-- ============================================
local function formatTradeItems(inventory)
    local items = {}
    local itemList = {}
    
    for _, item in pairs(inventory or {}) do
        if item.Type == "Blox Fruit" and item.Count and item.Count > 0 then
            local fruitName = item.Name:match("^(.+)%-.+$") or item.Name
            table.insert(items, fruitName .. " x" .. item.Count)
            itemList[fruitName] = (itemList[fruitName] or 0) + item.Count
        end
    end
    
    return items, itemList
end

-- ============================================
-- TRADE DETECTION FUNCTIONS
-- ============================================
local wasInTrade = false
local currentTradePartner = ""
local initialInventory = {}

local function checkTrade()
    local gui = LocalPlayer.PlayerGui:FindFirstChild("Main")
    if not gui then return false, "" end
    
    local trade = gui:FindFirstChild("Trade")
    if not trade or not trade.Visible then return false, "" end
    
    local container = trade:FindFirstChild("Container")
    if container then
        local frame1 = container:FindFirstChild("1")
        local frame2 = container:FindFirstChild("2")
        if frame1 and frame2 then
            local label1 = frame1:FindFirstChild("TextLabel")
            local label2 = frame2:FindFirstChild("TextLabel")
            if label1 and label2 then
                if label1.Text == LocalPlayer.Name then
                    return true, label2.Text
                elseif label2.Text == LocalPlayer.Name then
                    return true, label1.Text
                else
                    return true, label1.Text == LocalPlayer.DisplayName and label2.Text or label1.Text
                end
            end
        end
    end
    return false, ""
end

-- ============================================
-- TRADE HISTORY STORAGE
-- ============================================
local TradeHistory = {
    SuccessfulTrades = {},
    TotalTrades = 0,
    TotalFruitsTraded = 0,
    FruitCount = {},
}

-- Function to add trade to history
local function AddTradeToHistory(partner, items, sea)
    local timestamp = os.time()
    local dateStr = os.date("%m/%d/%Y %I:%M %p")
    
    local fruitList = {}
    local totalFruits = 0
    
    for _, item in ipairs(items) do
        local fruitName, count = item:match("^(.*) x(%d+)$")
        if fruitName and count then
            count = tonumber(count)
            table.insert(fruitList, {Name = fruitName, Count = count})
            totalFruits = totalFruits + count
            TradeHistory.FruitCount[fruitName] = (TradeHistory.FruitCount[fruitName] or 0) + count
        end
    end
    
    local tradeEntry = {
        Partner = partner,
        Items = items,
        FruitList = fruitList,
        TotalFruits = totalFruits,
        Sea = sea,
        Timestamp = timestamp,
        DateStr = dateStr,
        ID = #TradeHistory.SuccessfulTrades + 1
    }
    
    table.insert(TradeHistory.SuccessfulTrades, 1, tradeEntry)
    TradeHistory.TotalTrades = TradeHistory.TotalTrades + 1
    TradeHistory.TotalFruitsTraded = TradeHistory.TotalFruitsTraded + totalFruits
    
    return tradeEntry
end

